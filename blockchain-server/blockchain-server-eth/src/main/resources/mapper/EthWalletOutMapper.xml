<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blockchain.server.eth.mapper.EthWalletOutMapper">
	<resultMap id="EthWalletOutMap" type="com.blockchain.server.eth.dto.wallet.EthWalletOutDto">
		<result property="id" column="id"/>
		<result property="addr" column="addr"/>
		<result property="tokenSymbol" column="token_symbol"/>
		<result property="tokenDecimals" column="token_decimals"/>
		<result property="remark" column="remark"/>
	</resultMap>
	<sql id="tableName">dapp_eth_wallet_out</sql>

	<select id="listByTokenSymbol" resultMap="EthWalletOutMap">
		SELECT id,addr,token_addr,token_symbol,token_decimals,remark
		FROM
		<include refid="tableName"/>
		<where>
			<if test="tokenSymbol != null">
				AND token_symbol = #{tokenSymbol}
			</if>
		</where>
	</select>

</mapper>